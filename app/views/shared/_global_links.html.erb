<% if logged_in? %>
 	<strong><%= current_user.site_name %></strong> | 
	<%= link_to t('site.dashboard.title'), root_url %> | 
	<%= link_to t('site.profile.title'), profile_url(current_user) %> | 
	<% if admin? -%><%= link_to t('admin.dashboard.title'), admin_root_url %> | <% end -%>
	<%= link_to t('session.log_out'), destroy_user_session_path %>
<% else %>
	<%= link_to t('session.sign_up'), new_user_registration_path %> | 
	<%= link_to t('session.log_in'), new_user_session_path %>
<% end %>