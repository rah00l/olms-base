<% content_for :header do -%>
	<%= t('admin.delayed_jobs.title')%>
<% end -%>


<table class="index">
  <tr>
    <th><%= t('admin.delayed_jobs.attributes.id')%></th>
    <th><%= t('admin.delayed_jobs.attributes.priority')%></th>
    <th><%= t('admin.delayed_jobs.attributes.attempts')%></th>
    <th><%= t('admin.delayed_jobs.attributes.run_at')%></th>
    <th><%= t('admin.delayed_jobs.attributes.locked_at')%></th>
    <th><%= t('admin.delayed_jobs.attributes.created_at')%></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.id %></td>
    <td><%= job.priority %></td>
    <td><%= job.attempts %></td>
    <td><%= l(job.run_at, :format => :short) %></td>
    <td><%= l(job.locked_at, :format => :short) %></td>
    <td><%= l(job.created_at, :format => :short) %></td>
  </tr>
<% end %>
</table>

<br />
